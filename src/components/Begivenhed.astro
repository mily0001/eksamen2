---
import { supabase } from '../api/supabaseClient';

const { data: events, error } = await supabase.from('eksamen2_begivenheder').select('*');

if (error) {
  console.error(error);
}
---

<article class="gridkalender">
  {
    events?.map((event) => (
      <div class="begivenhed">
        <img src={`/billeder/${event.billedelink}`} alt="Begivenhedsbillede" />
        <h2>{event.begivenhednavn}</h2>
        <p>{event.beskrivelse}</p>
        <h3>{event.tidspunkt}</h3>
        <div class="adresse">
          <h3>ADRESSE:</h3>
          <h4>{event.sted1}</h4>
          <h4>{event.sted2}</h4>
          <h4>{event.sted3}</h4>
        </div>
        <a href={event.aktueltlink}>LÃ¦s mere her</a>
      </div>
    ))
  }
</article>

<style>
  .begivenhed {
    background-image: url(/billeder/begivenhedboks.webp);
    background-size: cover;
    background-repeat: no-repeat;
    height: auto;
    width: 90%;
    margin-left: auto;
    margin-right: auto;
    padding: 20px;
    margin-bottom: 50px;
  }

  .begivenhed img {
    width: 350px;
    padding-top: 20px;
    margin-left: auto;
    margin-right: auto;
  }

  .begivenhed h2,
  .begivenhed h3,
  .begivenhed h4 {
    text-align: center;
    font-family: 'Gabarito', sans-serif;
  }

  .begivenhed p {
    width: 350px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 10px;
    font-family: 'Fira Sans', sans-serif;
  }
  .adresse h4 {
    font-weight: 400;
  }

  .adresse {
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .begivenhed a {
    text-decoration: none;
    text-transform: uppercase;
    color: red;
    border: red 2px solid;
    border-radius: 5px;
    padding: 5px;
    font-size: small;
    font-family: 'Fira Sans', sans-serif;
    display: block;
    text-align: center;
    width: 150px;
    margin-left: auto;
    margin-right: auto;
  }

  .begivenhed a:hover {
    color: white;
    background-color: red;
  }

  @media screen and (min-width: 820px) {
    .gridkalender {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 50px;
    }
  }
</style>
