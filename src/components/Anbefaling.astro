---
const { navn, alder, link, anbimg, udtalelse, overskrift } = Astro.props;
---

<article>
  <div class="anbefalingboks">
    <div class="anbefalingtb">
      <img src={anbimg} alt="1" />
      <div class="navnalder">
        <h4>{navn}</h4>
        <h4>{alder}</h4>
        <a href={link}>- LÃ¦s mere her</a>
        <h3>{overskrift}</h3>
      </div>
    </div>
    <div>
      <p>{udtalelse}</p>
    </div>
  </div>
</article>

<style>
  .anbefalingboks {
    background-image: url(/billeder/anbefalingboks.webp);
    background-size: cover;
    width: 80%;
    background-repeat: no-repeat;
    margin-left: auto;
    margin-right: auto;
  }

  .anbefalingboks img {
    width: 75px;
    margin-top: auto;
  }

  .anbefalingtb {
    display: grid;
    grid-template-columns: 1fr 3fr;
    margin: 30px 30px 0px 30px;
    padding-top: 25px;
  }

  .navnalder {
    margin-left: 20px;
  }

  h3 {
    font-family: 'Gabarito', sans-serif;
    font-style: italic;
    font-weight: 400;
    font-size: 20px;
  }

  h4 {
    font-family: 'Gabarito', sans-serif;
    font-weight: 700;
  }

  .anbefalingboks p {
    margin: 5px;
    padding: 20px;
    font-family: 'Fira Sans', sans-serif;
  }

  .anbefalingboks a {
    text-decoration: none;
    color: red;
    font-family: 'Fira Sans', sans-serif;
    font-weight: 700;
  }

  .anbefalingboks a:hover {
    text-decoration: underline;
  }
</style>
