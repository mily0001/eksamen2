import '../styles/style.css';
import '../styles/index.css';
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Gabarito:wght@400..900&display=swap"
      rel="stylesheet"
    />

    <title>Gospelnet.dk</title>
  </head>
  <body>
    <main>
      <Header />
      <div class="hero">
        <img src="/src/assets/heroforside.png" alt="heroimg" />
      </div>
      <h1>GOSPELNET.DK</h1>
      <hr />
      <div class="gospelikbh">
        <img src="/src/assets/forsidegospel.png" alt="billede1" />
